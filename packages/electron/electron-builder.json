{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "asar": false,
  "directories": {
    "output": "../../release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    "!tsconfig.json",
    "!tsconfig.*.json",
    {
      "from": "../../dist",
      "filter": [
        "**/*",
        "!electron"
      ]
    },
    {
      "from": "../../dist/electron",
      "filter": [
        "index.js"
      ]
    }
  ],
  "win": {
    "target": [
      "portable"
    ]
  },
  "mac": {
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ]
  }

}
