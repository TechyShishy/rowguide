{
  "asar": true,
  "directories": {
    "output": "../../release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../rowguide/dist",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "target": [
      "portable"
    ]
  },
  "mac": {
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "target": [
      "AppImage"
    ]
  }
}
